<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/roulette_spinner_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:minHeight="128dp"
        android:minWidth="128dp"
        app:srcCompat="@drawable/ic_roulette_yellow" />

    <TextView
        android:id="@+id/information_text_roulette"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/roulette_spinner_button"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="64dp"
        android:gravity="center_horizontal"
        android:text="Gliogáil ar an saighead chun nasc a chruthú!"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/unmatched_count_roulette"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roulette_spinner_button"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="64dp"
        android:gravity="center_horizontal" />

    <ProgressBar
        android:layout_marginTop="48dp"
        android:layout_below="@+id/roulette_spinner_button"
        android:id="@+id/roulette_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:indeterminate="true" />
</RelativeLayout>