<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/roulette_spinner_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:minHeight="128dp"
        android:minWidth="128dp"
        app:srcCompat="@drawable/ic_roulette_yellow" />

    <TextView
        android:id="@+id/information_text_roulette"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/roulette_spinner_button"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal"
        android:text="Gliogáil ar an gcnaipe thíos chun nascadh le duine nua!" />

    <TextView
        android:id="@+id/unmatched_count_roulette"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roulette_spinner_button"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal"/>
</RelativeLayout>